model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique   // ðŸ‘ˆ Clerk is the true unique identifier
  email       String
  name        String?
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation
  records     Record[]
}

model Record {
  id        String   @id @default(uuid())
  text      String
  amount    Float
  category  String   @default("Other")
  date      DateTime @default(now())
  userId    String

  // Relation -> reference User.id
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
}
